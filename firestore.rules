rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // threads/{chatId}/messages/{messageId}
    match /threads/{chatId}/messages/{messageId} {
      allow read: if true; // público para teste
      allow create: if request.auth != null
                    && request.resource.data.user._id == request.auth.uid
                    && request.resource.data.keys().hasOnly(['text','image','createdAt','user']);
      allow update, delete: if false; // sem edição/remoção
    }
  }
}
